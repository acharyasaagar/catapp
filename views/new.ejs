<% include partials/header %>

<div class="container">
<h3 class="text-center mb-5">Add a new cat</h3>
  <div class="row">
    <div class="col">
        <form action="/cats" method="POST">
            <div class="form-group w-75 mx-auto">
                <input class="form-control p-2" type="text" name="title" placeholder="Title" required>
            </div>
            <div class="form-group w-75 mx-auto">
                <input  class="form-control p-2" type="text" name="image" placeholder="Enter image URL" required>
            </div>
            <div class="form-group w-75 mx-auto">
                <textarea  class="form-control p-2" type="textarea" rows="4" name="details" placeholder="Details" required></textarea>
            </div>
            <button class="btn btn-primary btn-block w-75 mx-auto" type="submit">Add new Cat</button>
        </form>
    </div>
  </div>
</div>


